<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardViewCertificate"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:id="@+id/certificateIssuerImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/certificateName"
            android:layout_toRightOf="@id/certificateIssuerImage"
            android:layout_marginLeft="20dp"
            android:text="Android Development Basics"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/certificateIssuerName"
            android:layout_below="@id/certificateName"
            android:textColor="#000"
            android:layout_toRightOf="@id/certificateIssuerImage"
            android:layout_marginLeft="20dp"
            android:text="Udacity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#75767A"
            android:id="@+id/certificateCredentials"
            android:layout_below="@id/certificateIssuerName"
            android:layout_toRightOf="@id/certificateIssuerImage"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1478Csac1231"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>